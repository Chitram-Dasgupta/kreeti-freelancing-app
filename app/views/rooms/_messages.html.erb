<div id="messages" class="overflow-auto flex-column mb-auto" data-room-id="<%= room.id %>">
  <% messages.each do |message| %>
    <div class="d-flex <%= current_user?(message.user) ? 'justify-content-start' : 'justify-content-end' %>">
      <div class="<%= current_user?(message.user) ? 'bg-primary' : 'bg-secondary' %> text-white rounded-pill px-3 py-1 mb-1 mx-2">
        <p class="mb-0">
          <%= message.content %>
        </p>
      </div>
    </div>
  <% end %>
</div>