<% fields.each do |field, type| %>
  <div class="mb-3">
    <%= form.label field, class: 'form-label' %>
    <% if type == 'file' && user.send(field).attached? && action_name == 'edit' %>
      <div class="mb-2">
        <span class="text-muted">Previously selected:</span> <%= link_to user.send(field).filename.to_s.truncate(25), url_for(user.send(field)), target: "_blank" %>
      </div>
    <% end %>
    <%= form.send("#{type}_field", field, class: 'form-control') %>
    <%= render 'shared/field_errors', object: user, field: %>
  </div>
<% end %>
